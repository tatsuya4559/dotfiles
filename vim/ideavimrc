" vimscriptを使用してsourceしても読み込んでいないみたい
let g:rc_dir = expand('~/.vim/rc')

function! s:source_rc(rc_file_name)
    let rc_file = expand(g:rc_dir . '/' . a:rc_file_name)
    if filereadable(rc_file)
        execute 'source' rc_file
    endif
endfunction

call s:source_rc('basic.rc.vim')
call s:source_rc('mappings.rc.vim')

--------------------------------------------------------------------------------
" ideavim固有の設定
set showmatch matchtime=1
set cmdheight=2
set laststatus=2
set showcmd
set display=lastline
set iminsert=2
set surround

" ideavim mappings
nnoremap [idea] <Nop>
nmap <C-j> [idea]
nnoremap [idea]f :action SearchEverywhere<CR>
nnoremap [idea]g :action FindInPath<CR>
nnoremap [idea]o :action FileStructurePopup<CR>
nnoremap [idea]h :action FindUsages<CR>
nnoremap [idea]r :action RenameElement<CR>
nnoremap <C-]> :action GotoDeclaration<CR>
nnoremap <C-=> :action ReformatCode<CR>
vnoremap <C-=> :action ReformatCode<CR>
nnoremap <C-/> :action CommentByLineComment<CR>
vnoremap <C-/> :action CommentByLineComment<CR>

