[user]
    name = tatsuya4559
    email = tatsuya.k1029@gmail.com
[core]
    editor = nvim
[diff]
    tool = nvimdiff
    guitool = meld
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -Rdc \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
[difftool "meld"]
    cmd = "meld $LOCAL $REMOTE"
[merge]
    tool = nvimdiff
    guitool = meld
[mergetool "nvimdiff"]
    cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"  \"$MERGED\""
[mergetool "meld"]
    cmd = "meld $LOCAL $BASE $REMOTE --auto-merge"
[alias]
    st = status
    co = checkout
    cm = commit
    fe = fetch
    pop = stash pop
    br = branch
    di = diff
    dt = difftool
    see = browse
[fetch]
    prune = true
[ghq]
    root = ~/git
