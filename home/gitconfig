[user]
    name = tatsuya4559
    email = tatsuya.k1029@gmail.com
[core]
    editor = nvim
[diff]
    tool = nvimdiff
    guitool = meld
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -Rdc \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
[difftool "meld"]
    cmd = "meld $LOCAL $REMOTE"
[merge]
    tool = nvimdiff
    guitool = meld
[mergetool "nvimdiff"]
    cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"  \"$MERGED\""
[mergetool "meld"]
    cmd = "meld $LOCAL $BASE $REMOTE --auto-merge"
[alias]
    st = status
    co = checkout
    cm = commit
    fe = fetch
    pop = stash pop
    br = branch
    di = diff
    dt = difftool
    see = browse
    sw = switch
    re = restore
[fetch]
    prune = true
[ghq]
    root = ~/git

[color]
  ui = auto
[color "branch"]
  current = yellow
  local = 241
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
[color "status"]
  added = green
  changed = yellow
  untracked = magenta
